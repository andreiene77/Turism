<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-padding: 50;"
      xmlns="http://javafx.com/javafx/10.0.1" fx:controller="controller.LoginController">
    <children>
        <Text fill="#464646" strokeType="OUTSIDE" strokeWidth="0.0" text="Login" textAlignment="CENTER"
              wrappingWidth="500.0">
            <font>
                <Font size="32.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
        </Text>
        <Text fill="#464646" strokeType="OUTSIDE" strokeWidth="0.0" text="Username:">
            <font>
                <Font size="20.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
        </Text>
        <TextField fx:id="usernameTextField" promptText="username" style="-fx-alignment: center; -fx-padding: 10;">
            <font>
                <Font size="20.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="15.0"/>
            </VBox.margin>
        </TextField>
        <Text fill="#464646" strokeType="OUTSIDE" strokeWidth="0.0" text="Password:">
            <font>
                <Font size="20.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
        </Text>
        <TextField fx:id="passTextField" promptText="password" style="-fx-alignment: center; -fx-padding: 10;">
            <font>
                <Font size="20.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="25.0"/>
            </VBox.margin>
        </TextField>
        <Button fx:id="logInButton" defaultButton="true" mnemonicParsing="false" onAction="#handleLoginUser"
                prefHeight="50.0" prefWidth="500.0"
                style="-fx-background-color: #c6c6c6; -fx-alignment: center; -fx-padding: 10;" text="Log In"
                textAlignment="CENTER" textFill="#464646">
            <font>
                <Font size="18.0"/>
            </font>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </Button>
    </children>
</VBox>
